<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
  <fieldset>
  <legend>Please Log In to M2W</legend>
  <div>
    <%= label_tag :login, 'Login Id:' %>
    <%= text_field_tag :login, params[:login] %>
  </div>
  <div>
    <%= label_tag :password, 'Password:' %>
    <%= password_field_tag :password, params[:password] %>
  </div>
  <div>
     <%= submit_tag "Login" %>
  </div>
  </fieldset>
<% end %>

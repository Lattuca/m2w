<p id="notice"><%= notice %></p>

<h1>Listing of Workers</h1>

<table>
  <thead>
    <tr>
      <th>Badge #</th>
      <th>Effective date</th>
      <th>Active</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City name</th>
      <th>State</th>
      <th>ZIP</th>
      <th>Email</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.badge_nbr %></td>
        <td><%= worker.effective_date %></td>
        <td><%= worker.active %></td>
        <td><%= worker.first_name %></td>
        <td><%= worker.last_name %></td>
        <td><%= worker.address_line_1 %></td>
        <td><%= worker.address_line_2 %></td>
        <td><%= worker.city_name %></td>
        <td><%= worker.state_code %></td>
        <td><%= worker.zip_code %></td>
        <td><%= worker.email %></td>

        <td><%= link_to 'Show', worker %></td>
        <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
        <td><%= link_to 'Delete', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


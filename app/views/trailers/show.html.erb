  <legend> <strong> Uploaded Document </strong></legend>
    <p>
      <strong>File Name: </strong>
        <%= @trailer.doc_file_name %>
    </p>
    <p>
      <strong>Content Type: </strong>
        <%= @trailer.doc_content_type %>
    </p>
    <p>
      <strong>File Size: </strong>
        <%= number_to_human_size(@trailer.doc_file_size) %>
    </p>
    <p>
      <strong>Updated On: </strong>
        <%= @trailer.doc_updated_at %>
    </p>
    <p>
      <strong>Comments: </strong>
        <%= @trailer.doc_comment %>
    </p>
    <p>
  <strong> View Document :</string>

  <h3>

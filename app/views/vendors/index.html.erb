<p id="notice"><%= notice %></p>

<h1>Listing Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Vendor Name</th>
      <th>Address Line1</th>
      <th>Address Line2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Contact Name</th>
      <th>Email</th>
      <th>Phone #</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.vendor_name %></td>
        <td><%= vendor.address_line_1 %></td>
        <td><%= vendor.address_line_2 %></td>
        <td><%= vendor.city_name %></td>
        <td><%= vendor.state_code %></td>
        <td><%= vendor.zip_code %></td>
        <td><%= vendor.contact_name1 %></td>
        <td><%= vendor.email1 %></td>
        <td><%= vendor.phone_nbr1 %></td>


        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Delete', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

